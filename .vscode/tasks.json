{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "C/C++: gcc build",
		"command": "/usr/bin/g++",
		"args": [
			"-g",
			 "${file}",
			 "-lgtest",
			 "-lpthread",
			 "-o", 
			 "${fileDirname}/bin/${fileBasenameNoExtension}",
		],
		"options": {
			"cwd": "${workspaceFolder}"
		},
		"problemMatcher": [
			"$gcc"
		],
		"group": {
		  "isDefault": true,
		  "kind": "build"
		}
	  }
	]
}